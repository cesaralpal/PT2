<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">




    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:id="@+id/imgApple"
               android:src="@drawable/ic_apple"
               android:layout_marginTop="20dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"

    />

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgApple"
            android:id="@+id/tvContacto"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Desayuno"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvContacto"
            android:id="@+id/tvContactodos"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Comida"
            app:layout_constraintLeft_toLeftOf="parent"
    />
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvContactodos"
            android:id="@+id/tvContactotres"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Cena"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <android.support.v7.widget.AppCompatSpinner android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:layout_constraintTop_toTopOf="@id/tvContacto"
                                                app:layout_constraintLeft_toRightOf="@id/tvContacto"
                                                app:layout_constraintRight_toRightOf="parent"
                                                android:id="@+id/spineruno"
    >
    </android.support.v7.widget.AppCompatSpinner>

    <android.support.v7.widget.AppCompatSpinner android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:layout_constraintTop_toTopOf="@id/tvContactodos"
                                                app:layout_constraintLeft_toRightOf="@id/tvContacto"
                                                app:layout_constraintRight_toRightOf="parent"
                                                android:id="@+id/spinerdos"
    >
    </android.support.v7.widget.AppCompatSpinner>

    <android.support.v7.widget.AppCompatSpinner android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:layout_constraintTop_toTopOf="@id/tvContactotres"
                                                app:layout_constraintLeft_toRightOf="@id/tvContactotres"
                                                app:layout_constraintRight_toRightOf="parent"
                                                android:id="@+id/spinertres"
    >


    </android.support.v7.widget.AppCompatSpinner>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spinertres"
            android:layout_marginTop="50dp"
            android:text="Guardar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
</android.support.constraint.ConstraintLayout>