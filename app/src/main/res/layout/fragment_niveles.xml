<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">




    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:id="@+id/imgGrafica"
               android:src="@drawable/ic_grafica"
               android:layout_marginTop="20dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"

    />
    <TextView
            app:layout_constraintTop_toTopOf="@id/tinUsername"
            app:layout_constraintBottom_toBottomOf="@id/tinUsername"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/tvNiveles"
            android:layout_marginStart="10dp"
            android:text="Ingresa tu nivel glucémico"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tinUsername"


    />
    <android.support.design.widget.TextInputLayout
            android:id="@+id/tinUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toRightOf="@id/tvNiveles"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgGrafica"
    >



        <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="niveles"
                android:inputType="textEmailAddress" />


    </android.support.design.widget.TextInputLayout>


    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/tvConsultar"
            android:layout_marginStart="10dp"
            android:text="Ingresa tu nivel glucémico"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tinUsername"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvConsultar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />
</android.support.constraint.ConstraintLayout>