<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView android:layout_width="90dp"
           android:layout_height="90dp"
           android:id="@+id/imgMoon"
           android:src="@drawable/ic_moon"
           android:layout_marginTop="20dp"
           app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"

/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/opciones_modo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/imgMoon"
                android:orientation="horizontal">

        <RadioButton
                android:id="@+id/radio_masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="true"
                android:text="Activado" />

        <RadioButton
                android:id="@+id/radio_femenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Desactivado" />
    </RadioGroup>

    <Button
            android:id="@+id/btnScan"

            android:layout_width="match_parent" android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@id/opciones_modo"
    />
</android.support.constraint.ConstraintLayout>